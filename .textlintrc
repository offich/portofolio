{
  "filters": {
    "comments": true
  },
  "rules": {
    "@textlint-ja/no-synonyms": true,
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "always"
      }
    },
    "preset-ja-technical-writing": {
      "ja-no-mixed-period": {
        "allowPeriodMarks": ["„ÄÅ"]
      }
    },
    "spellcheck-tech-word": true,
    "max-kanji-continuous-len": {
      "max": 8
    }
  }
}
